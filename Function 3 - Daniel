//This function requests and returns: The amount of any round-trip airfare

#include <iostream>

using namespace std;

double airfareAmount()                                         //please consult the int main() file when typing parameters
{
    double airfareFee;
    
    cout << "Enter the total cost of the air fare: $" ;               //Ask user for total airfare//
    cin >> airfareFee;                                              //save airfare in variable named airfareFee//

    while (airfareFee < 0)                                         //Input validation//
    {
        cout "THAT NUMBER IS LESS THAN 0! Try inputing a number more than 0: " ;
        cin >> airfareFee ;
    }

    return airfareFee;                                           //Return air fare to int main//
}
